<p style="color: green"><%= notice %></p>

<%= render @user %>
<div class="microposts">
  <% @user.microposts.each do |mp| %>
    <p>
      <%= mp.content %>
      <%= link_to "(source)", mp %>
    </p>
<% end %>
</div>


<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
