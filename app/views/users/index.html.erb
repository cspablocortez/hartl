<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <div class="row">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><%= user.name %></span>
          <strong>Contact:<strong>
          <%= user.email %>
          <%= link_to "Show user", user, :style => "float: right" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<hr>

<%= link_to "New user", new_user_path %>