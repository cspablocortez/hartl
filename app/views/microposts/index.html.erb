<p style="color: green"><%= notice %></p>

<h1>Microposts</h1>

<% @microposts.each do |micropost| %>
  <div class="micropost">
      <p><span class="micropost-data"><%= "#{micropost.created_at.strftime('%d %b - (%H:%M) ') }" %></span><%= micropost.content %>
      <%= link_to "(Source)", micropost, :style => "float: right" %>
      </p>
  </div>
<% end %>

<br>

<%= link_to "New post", new_micropost_path %>


